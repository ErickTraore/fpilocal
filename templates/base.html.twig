{# templates/base.html.twig #}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

   <title>{% block title %} FPI-FRANCE {% endblock %}</title>

  {% block stylesheets %}
    {# On charge le CSS de bootstrap depuis le site directement #}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link href="{{ asset('assets/css/bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/tuto.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('assets/css/stripeElement.css') }}" type="text/css" rel="stylesheet">
  {% endblock %}

  </head>
<body>
 <header class="container" >
      {% block logo %}
			  						<div class="row" id="head-color">
                      <div class="col-lg-3 col-md-2 col-sm-2 hidden-xs">
                        <div> <img src="{{ asset('assets/img/logofpi.png') }}" class="img-circle"  alt="logo"></div>
                      </div>
								  <div class="col-lg-9 col-md-9 col-sm-9 ">
									  <h1>FRONT  POPULAIRE  IVOIRIEN</h1>        
									  <h3>Représentation FPI-FRANCE-METROPOLITAINE</h3> 
                    <h3>Auvergne-Rhône-Alpes</h3>       
									  <h5>(SITE RESERVE AUX SG et SGA des sections d'Auvergne-Rhôme-Alpes)</h5>        
								  </div>
						</div>
      {% endblock logo %}

{% block navbar %}
 <div class="row" >
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <nav class="navbar navbar-inverse">
				<div class="container-fluid">
				  <ul class="nav navbar-nav">
					  <li><a href="{{'/'}}"><p><h4><span class="label label-info">Accueil</span></h4></p></a> </li>
						<li><a href="#"><p><h4><span class="label label-info">Front Populaire Ivoirien</span></h4></p></a> </li>
					{# Si un user existe alors présentez deconnexion, si non présentez connexion #}
          {% if is_granted('ROLE_SYMPATHISANT') %}
						<li> <a href="{{ path('app_logout') }}"><p><h4><span class="label label-info">Deconnexion</span></h4></p></a> </li>
            {% else %}
          	<li> <a href="{{ path('app_register') }}"><p><h4><span class="label label-warning">Inscription</span></h4></p></a> </li>
						<li> <a href="{{ 'login' }}"><p><h4><span class="label label-success">Connexion FPI</span></h4></p></a> </li>
             {% endif %}
          </ul>
			  </div>
      </nav> 
    </div>
	</div>
  {% endblock navbar %}
      <div class="row">
						<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        {% block pub %}  {% endblock %}
                
            </div>
			</div>

        <div class="row" id="body-color">
                <nav class="col-lg-2">
                {% block gauche %}{% endblock %}
                </nav>
                <section class="col-lg-7">
                {% block body %} {% endblock %}
                </section>

		            <aside class="col-lg-2">
                    <div class="row">
                        <div class="col-sm-12">
                        {% block droite %} {% endblock %}
                    </div>
                </aside>
        </div>
  
  <footer class="row">
  
				<h7 class="text-center"> 
     {% block foot %}

         <p>Association des Secrétaires Généraux de Section du FPI-France © {{ 'now'|date('Y') }} and beyond.</p>
     {% endblock foot %}
       
        </h7> 
    
   </footer>
     {% block javascripts %}
        {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
         <script src="https://js.stripe.com/v3/"></script> 
         {# <script var stripe = Stripe('pk_test_yH2L4wvQABMYrMv6xJnzwPDr')></script>  #}
         <script var stripe = Stripe('pk_live_CRM6aOQ11RfcncXdqX8jKYpB')></script> 
         <script async src="{{ preload(asset('bundles/app/js/jquery-2.1.3.min.js')) }}"> </script>
         <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
      <script>
          $(document).ready(function () {
              bsCustomFileInput.init()
          })
      </script> 
     {% endblock %}
  </header>
 </body>
 </html>  