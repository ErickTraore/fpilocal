{% extends 'base.html.twig' %}

{% block title %}Adhesion index{% endblock %}

{% block body %}
    <h1>Adhesion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Gender</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>ImageName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adhesion in adhesions %}
            <tr>
                <td>{{ adhesion.id }}</td>
                <td>{{ adhesion.gender ? 'Yes' : 'No' }}</td>
                <td>{{ adhesion.firstName }}</td>
                <td>{{ adhesion.lastName }}</td>
                <td>{{ adhesion.imageName }}</td>
                <td>
                    <a href="{{ path('adhesion_show', {'id': adhesion.id}) }}">show</a>
                    {# <a href="{{ path('adhesion_edit', {'id': adhesion.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('adhesion_newuser') }}">Create new</a>
{% endblock %}
